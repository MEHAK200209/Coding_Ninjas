//Arithmetic operations on Pointers
#include <iostream>
using namespace std;
int main() {
    // Write C++ code here
    int i=10;
    int *p = &i;
    
    cout<< p<< endl;
    p=p+1; 
    cout<< p<< endl;   //0x7fffc448fe58       


    p=p+2; 
    cout<< p<< endl; //0x7fffc448fe60 { 8 se 9 then a,b,c,d,e,f, 0)  shift of 8}
    p=p-2;
    cout<< p<< endl; //0x7fffc448fe58
    

    return 0;
}
